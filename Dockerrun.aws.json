{
    "AWSEBDockerrunVersion": "2",
    "containerDefinitions": [
        {
            "name": "client",
            "image": "noamros9/multi-container-project-client",
            "hostname": "client",
            "essential": false

        },
        {
            "name": "server",
            "image": "noamros9/multi-container-project-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "noamros9/multi-container-project-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "noamros9/multi-container-project-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}